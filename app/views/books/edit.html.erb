<% book = Book.find_by(id: params["id"]) %>

<div class="row">
  <div class="col-sm-12">
    <h3>Edit This Book</h3>
  </div>
</div>

<div class="row">
  <form action="/books/<%= book.id %>/update" class="col-sm-6">

    <p class="form-group">Title: <input value="<%= book.title %>" autofocus class="form-control" name="title"></p>

    <p class="form-group">Price: <input value="<%= book.price.to_f / 100.0 %>" class="form-control" name="price"></p>

    <p class="form-group">Author ID: <input value="<%= book.author_id %>" class="form-control" name="author"></p>

    <p class="form-group">Link to Photo: <input value="<%= book.photo_url %>" class="form-control" name="photo_url"></p>

    <p class="form-group">Summary:
      <textarea rows="5" class="form-control" name="summary"><%= book.summary %></textarea>
    </p>

    <button class="btn btn-primary">Update</button>
    or
    <a href="/">Cancel</a>

  </form>
</div>

<div class="row">
  <div class="col-sm-12">
    <h3>Add a New Book</h3>
  </div>
</div>

<form action="/books/create" class="col-sm-4">

    <p class="form-group">Title: <input autofocus class="form-control" name="title"></p>

    <p class="form-group">Price: <input class="form-control" name="price"></p>

    <p class="form-group">Author: 
    
      <select name="author_id">
        
        <% for author in Author.all %>
          <option value="<%= author.id %>">
            <%= author.name %>
          </option>
        <% end %>
        
      </select>
    
    
    
    </p>

    <p class="form-group">Link to Photo: <input class="form-control" name="photo_ul"></p>

    <p class="form-group">Summary:
      <textarea rows="5" class="form-control" name="summary"></textarea>
    </p>

    <button class="btn btn-primary">Add This Book</button>
    or
    <a href="/">Cancel</a>

</form>

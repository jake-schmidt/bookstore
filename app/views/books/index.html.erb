<h1>Books</h1>

<% if session["user_id"] != nil %>

  <p>
    <a class="float-right btn btn-primary" href="/books/new">Add a New Book</a>
  <p>

<% end %>

<ul>
  <% for book in Book.all %>
    <li>
      <a href="/books/<%= book.id %>">
          <%= book.title %>
      </a>
      <a href="/books/<%= book.id %>/delete">[toast]</a>
    </li>
  <% end %>
</ul>
